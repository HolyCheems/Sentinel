@{ 
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	.body-content {
		width:fit-content;
	}
</style>
<form id="newLotForm">
	<h1 class="panel-heading">New Parking Lot</h1>
	<label>Name:</label>
	@Html.TextBox("name", "", new { @class = "form-control" })
	<label>Camera:</label>
	@{Html.RenderAction("ListView", "Camera");}
    <label>ZM ID:</label>
    @Html.TextBox("zmID", "", new { @class = "form-control" })
	<br />
	<button type="submit" class="btn btn-primary btn-block">Create</button>
</form>
<script>
	let form = document.getElementById('newLotForm');
	form.addEventListener('submit', (evt) => {
		evt.preventDefault();
		$.ajax({
			url: '/ParkingLot/Create',
			data: {
				name: form.elements["name"].value,
                cameraID: form.elements["cameras"].value,
                zm: form.elements["zmID"].value
			}
		}).done(() => {
			location.href = '/ZoneManager/ZMIndex';
		});
	});
</script>